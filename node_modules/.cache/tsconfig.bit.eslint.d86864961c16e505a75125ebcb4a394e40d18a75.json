{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.Iterable"
    ],
    "target": "es2020",
    "module": "es2020",
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "exclude": [
    "../../my-scope/hello-world/artifacts",
    "../../my-scope/hello-world/public",
    "../../my-scope/hello-world/dist",
    "../../my-scope/hello-world/node_modules",
    "../../my-scope/hello-world/package.json",
    "../../my-scope/hello-world/**/*.cjs",
    "../../my-scope/hello-world/./dist"
  ],
  "include": [
    "../../my-scope/hello-world/**/*",
    "../../my-scope/hello-world/**/*.json",
    "./global-types/**/*"
  ]
}