{
  /**
   * standardize your component dependencies.
   * @see https://bit.dev/docs/react-env/dependencies
   **/
  "policy": {
    /**
     * peer dependencies for components using that env.
     */
    "peers": [
      {
        "name": "react",
        /* the version to be installed and used by the env */
        "version": "^18.0.0",
        /* the range of versions this env's components are compatible with */
        "supportedRange": "^17.0.0 || ^18.0.0"
      },
      {
        "name": "vitest",
        "version": "^1.0.0",
        "supportedRange": "^1.0.0"
      },
      {
        "name": "jsdom",
        "version": "^23.0.1",
        "supportedRange": "^23.0.1"
      },
      {
        "name": "react-dom",
        "version": "^18.0.0",
        "supportedRange": "^17.0.0 || ^18.0.0"
      },
      {
        "name": "react-router-dom",
        "version": "^6.16.0",
        "supportedRange": "^6.16.0"
      },
      {
        "name": "graphql",
        "version": "^16.8.1",
        "supportedRange": "^16.8.1"
      },
      {
        "name": "@apollo/client",
        "version": "^3.8.8",
        "supportedRange": "^3.8.8"
      },
      {
        "name": "@mdx-js/react",
        "version": "1.6.22",
        "supportedRange": "^1.6.22"
      },
      {
        "name": "@teambit/mdx.ui.mdx-scope-context",
        "version": "1.0.7",
        "supportedRange": "^1.0.0"
      },
      {
        "name": "webpack",
        "version": "^5.88.2",
        "supportedRange": "^5.88.2"
      },
      {
        "name": "eslint-plugin-import",
        "version": "2.22.1",
        "supportedRange": "2.22.1"
      },
      {
        "name": "eslint-plugin-jest",
        "version": "24.1.5",
        "supportedRange": "24.1.5"
      },
      {
        "name": "eslint-plugin-jsx-a11y",
        "version": "6.4.1",
        "supportedRange": "6.4.1"
      },
      {
        "name": "eslint-plugin-mdx",
        "version": "1.13.0",
        "supportedRange": "1.13.0"
      },
      {
        "name": "eslint-plugin-react",
        "version": "7.22.0",
        "supportedRange": "7.22.0"
      },
      {
        "name": "eslint-plugin-react-hooks",
        "version": "4.2.0",
        "supportedRange": "4.2.0"
      },
      {
        "name": "pino-pretty",
        "version": "4.5.0",
        "supportedRange": "4.5.0"
      },
      {
        "name": "@mdx-js/mdx",
        "version": "^1.6.22",
        "supportedRange": "^1.6.22"
      },
      {
        "name": "sass",
        "version": "^1.69.5",
        "supportedRange": "^1.69.5"
      },
      {
        "name": "browserslist",
        "version": "4.21.4",
        "supportedRange": "4.21.4"
      },
      {
        "name": "@types/react",
        "version": "18.2.23",
        "supportedRange": "^18.2.23"
      },
      {
        "name": "@types/react-dom",
        "version": "^18.2.5",
        "supportedRange": "^18.2.5"
      },
      {
        "name": "@types/jest",
        "version": "^29.2.2",
        "supportedRange": "^29.2.2"
      }
    ],
    /**
     * dev dependencies for components using that env
     */
    "dev": [
      {
        "name": "@testing-library/react",
        "version": "^13.4.0"
      },
      {
        "name": "@types/testing-library__jest-dom",
        "version": "^5.9.5",
        "force": true
      },
      {
        "name": "@testing-library/react-hooks",
        "version": "^8.0.1"
      }
    ]
  },

  /**
   * associate files with a specific dev service.
   * associated files are considered as dev files.
   * @see https://bit.dev/docs/react-env/dependencies#configure-files-as-dev-files
   **/
  "patterns": {
    /**
     * files to be loaded and displayed in the 'preview' tab.
     * @see https://bit.dev/docs/react-env/component-previews
     */
    "compositions": ["**/*.composition.*", "**/*.preview.*"],
    /**
     * files to be loaded and displayed in the 'overview' tab.
     * @see https://bit.dev/docs/react-env/component-docs
     */
    "docs": ["**/*.docs.*"],
    /* files to be included in the component testing */
    "tests": ["**/*.spec.*", "**/*.test.*"]
  }
}
