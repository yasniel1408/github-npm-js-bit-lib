{
  "extends": "@teambit/react/typescript/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2020",
    "lib": ["esnext", "dom", "dom.Iterable"],
    "experimentalDecorators": true,
    "outDir": "./dist"
  },
  "exclude": [
    "artifacts",
    "public",
    "dist",
    "node_modules",
    "package.json",
    "**/*.cjs"
  ],
  "include": ["**/*", "**/*.json"]
}
